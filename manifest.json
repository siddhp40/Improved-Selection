{
  "author": "Siddh Parikh",
  "manifest_version": 3,
  "name": "Improved Selection",
  "description": "Changes the default selection tool on all websites",
  "version": "1.0.1",
  "content_scripts": [
    {
        "matches":["<all_urls>"],
        "js": ["index.js"]
    }
  ],
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "images/icon32.png",
      "16": "images/icon16.png"
    }
  }
}
